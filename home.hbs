{{!< default}}

<main class="site-main">

    {{#page}}
        <article class="single {{post_class}}">

             <header class="single-header gh-canvas">
                 {{#if feature_image}}
                 {{#unless no_image}}
                     <figure class="kg-card kg-image-card kg-width-full">
                         <img class="kg-image" srcset="{{> "srcset"}}" sizes="(min-width: 1023px) 920px, calc(90vw)" src="{{img_url feature_image size="l"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
                     </figure>
                 {{/unless}}
                 {{/if}}
            </header>

            <div class="single-content gh-content gh-canvas">
                {{content}}
            </div>

            {{#is "post"}}
            <div class="gh-canvas">
                <footer class="single-footer">

                </footer>
            </div>
            {{/is}}

        </article>
    {{/page}}

</main>
