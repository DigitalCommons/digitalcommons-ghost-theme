{{#if @custom.banner_text }}
<div class="dc-banner gh-canvas">
  <span class="dc-banner-content">{{ @custom.banner_text }}</span>
  {{#if @custom.banner_button_url }}
  <a href="{{ @custom.banner_button_url }}" class="dc-banner-button"
    target="_blank" rel="noopener noreferrer">
    <span>
      {{#if @custom.banner_button_text }}
      {{ @custom.banner_button_text }}
      {{else}}
      Click Here
      {{/if}}
    </span>
  </a>
  {{/if}}
</div>
{{/if}}
